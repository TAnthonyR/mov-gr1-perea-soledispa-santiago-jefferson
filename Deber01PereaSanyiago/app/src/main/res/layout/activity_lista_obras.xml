<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listaObras">

    <TextView
        android:id="@+id/nombreArtistaTextView"
        android:layout_width="233dp"
        android:layout_height="43dp"
        android:text="Nombre del Artista"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/listaObras"
        app:layout_constraintStart_toStartOf="@+id/listaObras"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btnAgregarObra"
        android:layout_width="171dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:text="Agregar Obra"
        app:layout_constraintEnd_toEndOf="@+id/listaObras"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/listaObras"
        app:layout_constraintTop_toBottomOf="@+id/listaObras" />

    <ListView
        android:id="@+id/listaObras"
        android:layout_width="298dp"
        android:layout_height="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />


</androidx.constraintlayout.widget.ConstraintLayout>