<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarObraActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Valor:"
        app:layout_constraintBottom_toTopOf="@+id/etValorObra"
        app:layout_constraintEnd_toEndOf="@+id/etValorObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etValorObra" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Páginas:"
        app:layout_constraintBottom_toTopOf="@+id/etNumeroPaginasObra"
        app:layout_constraintEnd_toEndOf="@+id/etNumeroPaginasObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etNumeroPaginasObra" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Año:"
        app:layout_constraintBottom_toTopOf="@+id/etFechaCreacionObra"
        app:layout_constraintEnd_toEndOf="@+id/etFechaCreacionObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etFechaCreacionObra" />

    <TextView
        android:id="@+id/tvArtistaInfo"
        android:layout_width="76dp"
        android:layout_height="26dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="36dp"
        android:text="Artista: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7" />

    <EditText
        android:id="@+id/etTituloObra"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:hint="Título de la Obra"
        app:layout_constraintBottom_toTopOf="@+id/etFechaCreacionObra"
        app:layout_constraintEnd_toEndOf="@+id/etFechaCreacionObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etFechaCreacionObra" />

    <EditText
        android:id="@+id/etFechaCreacionObra"
        android:layout_width="293dp"
        android:layout_height="53dp"
        android:layout_marginBottom="44dp"
        android:hint="Año de Creación"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etNumeroPaginasObra"
        app:layout_constraintEnd_toEndOf="@+id/etNumeroPaginasObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etNumeroPaginasObra" />

    <EditText
        android:id="@+id/etNumeroPaginasObra"
        android:layout_width="173dp"
        android:layout_height="47dp"
        android:layout_marginBottom="56dp"
        android:hint="Número de Páginas"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etValorObra"
        app:layout_constraintEnd_toEndOf="@+id/etValorObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etValorObra" />

    <EditText
        android:id="@+id/etValorObra"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginBottom="40dp"
        android:hint="Valor"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/cbVendida"
        app:layout_constraintEnd_toEndOf="@+id/cbVendida"
        app:layout_constraintStart_toStartOf="@+id/cbVendida" />

    <CheckBox
        android:id="@+id/cbVendida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Vendida"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarObra"
        app:layout_constraintEnd_toEndOf="@+id/btnGuardarObra"
        app:layout_constraintStart_toStartOf="@+id/btnGuardarObra" />

    <Button
        android:id="@+id/btnGuardarObra"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:text="Guardar Obra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Obra:"
        app:layout_constraintBottom_toTopOf="@+id/etTituloObra"
        app:layout_constraintEnd_toEndOf="@+id/etTituloObra"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etTituloObra" />

</androidx.constraintlayout.widget.ConstraintLayout>